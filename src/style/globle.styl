.content div {
  word-wrap: break-word;
  &.title {
    padding-top: 5vh;
    font-size: 1.6rem;
    color: #FFFFFF;
    margin-left: 14vw;
    text-align: left;
  }
}

.form {
  margin: 4vh 0 2vh;
}

.formItem {
  margin: 2.5vh 14vw 0;
}

.formInput {
  width 88vw;
}

.submitFormItem {
  margin-top 2vh
  outline 1px solid #eee
  border 0 !important
}

.formButton {
  width 88vw;
  text-align center
  height 5vh
  margin 5vh 14vw 0
  font-size 1rem;
  color #00A6AE;
  .mint-button-text {
    display flex
    align-items center
    justify-content center
  }
  .spinner {
    margin-left 1vw
  }
}

.submitButton {
  margin-top: 1vh;
  font-size: 0.85rem;
  line-height 1.2
  color: #00A6AE;
  text-align: center;
  width: 72vw;
  background: #FFFFFF;
  border-radius: 6px;
  display flex
  align-items center
  justify-content center
  .imageLoading {
    z-index 1
    background-image: url($image-loading)
    background-size: cover;
    width 4.5vw
    height 4.5vw
  }
}

.goDiv {
  display: flex;
  margin: 0 14vw;
  .empty {
    flex: 1;
  }
  .goButton {
    min-width: 1vw;
    text-align: center;
    font-size: 0.85rem;
    color: #FFFFFF;
    letter-spacing: 0;
    cursor: pointer;
  }
}

/deep/ .mintSubmit {
  display flex
  align-items center
  justify-content center
  .mint-button {
    width 88vw
    color #FFFFFF
    background-image: linear-gradient(-134deg, #0BBFD5 0%, #6DD7B2 100%);
    box-shadow: 0 5px 5px 0 rgba(102, 187, 191, 0.14);
    border-radius: 2px;
    .mint-button-text {
      font-size 1rem
    }
  }
  .mint-button.is-disabled {
    background: #C8D4E0;
  }
}

/deep/ .mintCancel {
  display flex
  align-items center
  justify-content center
  .mint-button {
    width 88vw
    color #333333
    background: #FFFFFF;
    border: 1px solid rgba(0, 0, 0, 0.10);
    box-shadow: 0 5px 5px 0 rgba(0, 0, 0, 0.03);
    border-radius: 2px;
    .mint-button-text {
      font-size 1rem
    }
  }
  .mint-button.is-disabled {
    background: #C8D4E0;
  }
}

#captcha {
  width: 88vw;
  display: inline-block;
}

.inputPinCode {
  width: 68vw;
}

.inputPinCodePhone {
  width: 45vw;
}

.phoneCodeDiv {
  .el-form-item__content {
    display flex
    .phoneCode {
      width 44vw
    }
    .sendCode {
      text-align center
      margin-left 4vw
      width 24vw
    }
  }
}

.popup {
  position: fixed;
  z-index $zIndexPopup
  width 100%
  height 100%
  overflow: scroll;
  overflow-scrolling touch
  -webkit-overflow-scrolling: touch;
  background: #fff;
  top: 50%;
  left: 50%;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transition: .2s ease-out;
  transition: .2s ease-out;
}

.popup-top {
  top: 0;
  right: auto;
  bottom: auto;
  left: 50%;
  -webkit-transform: translate3d(-50%, 0, 0);
  transform: translate3d(-50%, 0, 0);
}

.popup-right {
  top: 50%;
  right: 0;
  bottom: auto;
  left: auto;
  -webkit-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
}

.popup-bottom {
  top: auto;
  right: auto;
  bottom: 0;
  left: 50%;
  -webkit-transform: translate3d(-50%, 0, 0);
  transform: translate3d(-50%, 0, 0);
}

.popup-left {
  top: 50%;
  right: auto;
  bottom: auto;
  left: 0;
  -webkit-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
}

.scrollPage {
  position absolute
  overflow-x hidden
  overflow-y scroll
  width 100vw
  background-color #fafafa
}

.noScrollPage {
  position absolute
  overflow-x hidden
  width 100vw
  background-color #fafafa
}

.text-over {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.flex-center {
  display flex
  align-items center
  justify-content center
}

.flex-vertical-center {
  @extend .flex-center
  flex-direction column
}
